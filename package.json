{
  "name": "procrasti-note",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "prisma generate",
    "generate-openapi-client": "openapi --input ./src/lib/openapi/openapi-spec.json --output ./src/lib/openapi/generated --useUnionTypes",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:css": "stylelint './src/**/*.{styled.ts,styled.tsx}'",
    "lint:css:fix": "stylelint --fix './src/**/*.{styled.ts,styled.tsx}'",
    "format": "prettier --write --ignore-path .gitignore \"**/*.{ts,tsx,js,jsx,md}\" \"!**/pb_migrations/**\"",
    "execute-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "dependencies": {
    "@hookform/error-message": "^2.0.1",
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^5.18.0",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.12",
    "bcrypt": "^5.1.1",
    "jose": "^5.2.3",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.51.1",
    "react-hot-toast": "^2.4.1",
    "react-spinners": "^0.14.1",
    "styled-components": "^6.1.1",
    "typewriter-effect": "^2.21.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "date-fns": "^3.0.6",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "html-react-parser": "^5.0.11",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.38",
    "postcss-styled-syntax": "^0.6.4",
    "prettier": "^3.1.1",
    "prisma": "^5.18.0",
    "stylelint": "^16.6.1",
    "stylelint-config-clean-order": "^5.4.2",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5",
    "vite": "^5.0.12",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^1.5.1",
    "vitest-canvas-mock": "^0.3.3",
    "vitest-fetch-mock": "^0.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --cache --fix",
      "pnpm format"
    ],
    "./src/**/*.{styled.ts,styled.tsx}": "stylelint --cache --fix"
  }
}
